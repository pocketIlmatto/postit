<%= render 'shared/content_title', title: "Profile: #{@user.username}" %>

<div class="well">
  <dl class="dl-horizontal">
    <dt>Username: </dt>
    <dd><%= @user.username %></dd>
  </dl>
  <% if content_creator_or_admin?(@user.id) %>
    <dl class="dl-horizontal">
      <dt>Role: </dt>
      <dd><%= @user.role %></dd>
    </dl>
  <% end %>
  <dl class="dl-horizontal">
    <dt>Timezone: </dt>
    <dd><%= @user.timezone %></dd>
  </dl>
</div>

<h5><%= @user.username %>'s Activity </h5>
<ul class="nav nav-tabs">
  <li class='<%= 'active' if params[:tab].nil? %>'>
    <%= link_to "Posts (#{@user.posts.size})", user_path(@user) %>
  </li>
  <li class='<%= 'active' if params[:tab] == 'comments' %>'>
    <%= link_to "Comments (#{@user.comments.size})", user_path(@user, tab: 'comments') %>
  </li>
</ul>

  
<%= render @user.posts  if params[:tab].nil? %>
<%= render @user.comments, show_post: true if params[:tab] == 'comments' %>
