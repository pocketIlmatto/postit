<% if @post.errors.any? %>
	<div class = "alert alert-error">
		<h5> Errors: </h5>
		<ul>
		<% @post.errors.full_messages.each do |error| %>
			<li><%= error %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= form_for(@post) do |f| %>
	<%= f.label 		:title %>
	<%= f.text_field 	:title %>

	<%= f.label 		:url %>
	<%= f.text_field 	:url %>

	<%= f.label 		:description %>
	<%= f.text_area 	:description %>
	<br/>
	<%= f.submit class: "btn btn-primary"%>
<% end %>
