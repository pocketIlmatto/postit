
  <div class="row">
    <div class="span0 well text-center">
      <% if logged_in? %>
        <%= link_to vote_post_path(post, vote: true), method: 'post' do %>
          <i class="icon-arrow-up"></i>
        <% end %><br/>
      <% end %>
      <strong><%= post.total_votes %> vote<%= "s" unless post.total_votes == 1 %></strong>
      <br/>
      <% if logged_in? %>
        <%= link_to vote_post_path(post, vote: false), method: 'post' do %> 
          <i class="icon-arrow-down"></i>
        <% end %>
      <% end %>
    </div>
    <div class='span8 well'>
      <p><%= render post.categories %></p>
      <h4><%= link_to(post.title, format_url(post.url), target: '_blank') %></h4>
      <p><%= post.description %></p>
      <%= render 'shared/user_time_info', user: post.creator, created_at: post.created_at %>
      <small>
        <span><%= link_to("#{post.comments.size} comments", post_path(post)) %></span>
      </small>
    </div>
  </div>
